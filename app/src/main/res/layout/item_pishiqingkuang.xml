<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="18dp"
    android:paddingRight="0dp"
    android:paddingTop="20dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lingdao"
        android:layout_width="62dp"
        android:layout_height="62dp" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/pishicontainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_pishi_tip"
                android:textColor="@color/colorListText"
                android:textSize="16sp"
                android:text="批示时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/txt_pishi_tip"
                android:id="@+id/txt_pishishijian"
                android:textColor="@color/colorListText"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:text="原笔迹"
                android:id="@+id/btn_yuanbiji"
                android:background="@drawable/bg_yuanbiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/colorPishiLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </LinearLayout>

</LinearLayout>