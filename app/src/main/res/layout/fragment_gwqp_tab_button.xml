<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="fragment.GwqpTabButtonFragment">

    <FrameLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/gwqp_btn_bg"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/gwqp_button">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/all"
                android:layout_marginBottom="10dp"
                android:id="@+id/gwqp_btn_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_all"
                android:textSize="16sp"
                android:textColor="@color/gwqp_foreground"
                android:id="@+id/gwqp_btn_txt"/>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
